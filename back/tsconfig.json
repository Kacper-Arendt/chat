{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./@types",
      "/node_modules/@types"
    ],
    "types": [
      "@types/jest"
    ],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}
